<idea-plugin>
    <id>com.github.hakandindis.plugins.adbhub</id>
    <name>ADB Hub</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="developer.hakandindis@gmail.com" url="https://github.com/hakandindis">Hakan Dindis</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.compose</depends>

    <resource-bundle>messages.ADBHubMessageBundle</resource-bundle>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="ADB Hub"
                    factoryClass="com.github.hakandindis.plugins.adbhub.toolWindow.AdbHubToolWindowFactory"
                    icon="/icons/pluginIcon.svg"/>
        <projectService
                serviceImplementation="com.github.hakandindis.plugins.adbhub.core.selection.SelectionManagerImpl"
                serviceInterface="com.github.hakandindis.plugins.adbhub.core.selection.SelectionManager"/>
    </extensions>
</idea-plugin>